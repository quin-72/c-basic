#include <iostream>

using namespace std;

int main(){
    int num1, num2;
    char op;

    std::cout << "Enter the first number: " << std::endl;
    std::cin >> num1;
    std::cout << "Enter the operator: " << std::endl;
    std::cin >> op;
    std::cout << "Enter the second number: " << std::endl;
    std::cin >> num2;

int result;
if(op == '+'){
    result = num1 + num2;
} else if(op == '-'){
    result = num1 - num2;
} else if(op == '*'){
    result = num1 * num2;
} else if(op == '/'){
    result = num1 / num2;
}
else {
    std::cout << "Operator invalid" << std::endl;
}
  std::cout << result << std::endl;
  return 0; 
}
